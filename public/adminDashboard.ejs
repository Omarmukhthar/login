<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/admin.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <header>
            <h1>Admin Dashboard</h1>
        </header>
        <section>
            <h2>User Management</h2>
            <div class="search-container">
                <form action="/admin/search" method="get" class="search-form">
                    <input type="text" name="username" placeholder="Search for users..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    <button type="submit" class="search-btn"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <div class="add-User">
                <a href="/createuser" class="add-user-btn">
                    <i class="fa-solid fa-user-plus"></i>
                </a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.name %></td>
                        <td>
                            <form action="/admin/edit" method="post" class="action-form">
                                <input type="hidden" name="id" value="<%= user._id %>">
                                <input type="text" name="username" placeholder="New Username" required>
                                <input type="password" name="password" placeholder="New Password" required>
                                <button type="submit" class="btn-edit"  onclick="return confirmedit()">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </button>
                            </form>
                            <form action="/admin/delete" method="post" class="action-form delete-form">
                                <input type="hidden" name="id" value="<%= user._id %>">
                                <button type="submit" class="delete-btn" onclick="return confirmDelete()">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
        <script>
            function confirmDelete() {
                return confirm("Are you sure you want to delete this user?");
            }
            function confirmedit() {
                return confirm("Are you sure you want to Edit this user?");
            }
        </script>
</body>
</html>
