<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart - ShopEase</title>
    <link rel="stylesheet" href="/stylehome.css">
    <style>
        .cart-container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }
        
        .cart-header {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }
        
        .cart-items {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .cart-item {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 15px;
            display: flex;
            flex-direction: column;
        }
        
        .item-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            margin-bottom: 15px;
        }
        
        .item-details {
            flex-grow: 1;
        }
        
        .item-title {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #333;
        }
        
        .item-price {
            font-weight: bold;
            color: #e44d26;
            margin-bottom: 15px;
        }
        
        .remove-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
            align-self: flex-start;
        }
        
        .remove-btn:hover {
            background: #c0392b;
        }
        
        .cart-summary {
            margin-top: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            text-align: right;
        }
        
        .total-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }
        
        .checkout-btn {
            background: #27ae60;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1.1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }
        
        .checkout-btn:hover {
            background: #219653;
        }
        
        .empty-cart {
            text-align: center;
            padding: 40px;
            color: #777;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="logo">ShopEase</div>
            <div class="nav-links">
                <a href="/home">Home</a>
                <a href="/aboutme">About</a>
                <a href="/profile">Profile</a>
                <a href="/cart" class="cart-link">
                    <span>Cart</span>
                    <% if (cartCount > 0) { %>
                        <span class="cart-count"><%= cartCount %></span>
                    <% } %>
                </a>
                <a href="/signout">Sign Out</a>
            </div>
        </nav>
    </header>

    <div class="cart-container">
        <h1 class="cart-header">Your Shopping Cart</h1>
        
        <% if (cartProducts.length > 0) { %>
            <div class="cart-items">
                <% cartProducts.forEach(product => { %>
                    <div class="cart-item">
                        <img src="<%= product.image %>" alt="<%= product.title %>" class="item-image">
                        <div class="item-details">
                            <h3 class="item-title"><%= product.title %></h3>
                            <div class="item-price">$<%= product.price.toFixed(2) %></div>
                            
                            <form action="/cart/remove/<%= product.id %>" method="POST">
                                <button type="submit" class="remove-btn">Remove Item</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div class="cart-summary">
                <div class="total-price">
                    Total: $<%= cartProducts.reduce((sum, product) => sum + product.price, 0).toFixed(2) %>
                </div>
                <button class="checkout-btn">Proceed to Checkout</button>
            </div>
        <% } else { %>
            <div class="empty-cart">
                <h2>Your cart is empty</h2>
                <p>Start shopping to add items to your cart</p>
                <a href="/home" class="back-link">Browse Products</a>
            </div>
        <% } %>
    </div>
</body>
</html>
