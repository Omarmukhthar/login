<%- include('partials/header', { title: 'Change Password' }) %>

<main class="container" style="padding: var(--space-6) 0;">
  <div class="container" style="max-width: 700px; margin: 0 auto;">
    <div class="card">
      <div class="card-body">
        <h2 class="font-semibold text-center" style="margin-bottom: var(--space-4);">Change Password</h2>
        <form action="/profile/change-password" method="POST">
          <div class="form-group">
            <label for="oldPassword" class="form-label">Old Password</label>
            <input type="password" id="oldPassword" name="oldPassword" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" id="newPassword" name="newPassword" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="confirmPassword" class="form-label">Confirm New Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" required>
          </div>

          <button type="submit" class="btn btn-primary" style="width:100%;"><i class="fas fa-key"></i> Change Password</button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
